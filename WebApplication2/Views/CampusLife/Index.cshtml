
@{
    ViewData["Title"] = "CampusLife";
}
@section Styles{
    <link rel="stylesheet" href="~/css/campuslife.css" />
}

<div id="campuslife-content">
    <section id="inner-banner">
        @Html.Partial("_innerBanner")
    </section>
    <div class="row">
        <aside id="left-side-nav-menu" class="col-md-3 col-sm-4 box hidden-xs">
            @Html.Partial("_CampusLifeSideBar")
        </aside>      
        <article id="core-content" class="col-md-9 col-sm-8 box">
            <div class="col-xs-12">
                <ul id="breadcrumb-nav-section" class="breadcrumb">
                    <li class="current"><a id="academics" class="href-links" asp-controller="CampusLife" asp-action="Index">CampusLife</a></li>
                </ul>
                <div id="content-title">
                    <div class="page-header">
                        <h1 class="h1 main-headings">Life in PBR Vits</h1>
                    </div>
                </div>
                <section id="content-block">
                    <div class="col-md-8">
                        <div id="content-block__main">
                            <p class="text-content text-para">
                            PBR VITS is furnished with well-equipped laboratories, classrooms with audio-visual aids, R&D labs and Wi-Fi Facility.  In addition, the institution has provided adequately for all amenities such as hostels, canteen, transport and sports facilities. The institution alumni are well placed and have regular interaction with faculty and students. The students are given adequate pre-placement training as well as exposure to industry related projects, thus equipping them with the required skills to find suitable employment.  Social activity is an important part of the institution with students and staff involving actively in NSS programmes and catering to the needs of Navavikas, an enterprise promoted by  PBR Visvodaya Institute of Technology & Science, which supplies rations to old and poor people.
                            </p>
                            <div id="image-rendering">
                                <img class="img-responsive" src="~/images/CampusLife/main.JPG" />
                            </div>
                        </div>
                    </div>
                </section>
                <aside id="right-side-nav-menu">
                    <div class="col-md-4">
                        <div id="content-block__side-menu">
                            @Html.Partial("_AcadamicsQuickLinks")
                        </div>
                    </div>
                </aside>            
            </div>
        </article>
    </div>
</div>

@section Scripts{
       <script src="https://cdn.jsdelivr.net/gh/cant89/gianni-accordion-js/dist/gianniAccordion.min.js"></script>
    <script src="~/js/campuslife.js"></script>
}



