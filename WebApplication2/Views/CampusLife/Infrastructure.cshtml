
@{
    ViewData["Title"] = "Infrastructure";
}


@{
    ViewData["Title"] = "Infrastructure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles{
    <link rel="stylesheet" href="~/css/campuslife.css" />
}

<div id="campuslife-content">
    <section id="inner-banner">
        @Html.Partial("_innerBanner")
    </section>
    <div class="row">
        <aside id="left-side-nav-menu" class="col-md-3 col-sm-4 box hidden-xs">
            @Html.Partial("_CampusLifeSideBar")
        </aside>
        <article id="core-content" class="col-md-9 col-sm-8 box ">
            <div class="col-xs-12">
                <ul id="breadcrumb-nav-section" class="breadcrumb">
                    <li class="current"><a class="href-links" asp-controller="CampusLife" asp-action="Index" id="campuslife">CampusLife</a></li>
                    <li id="currentpageBreadcrum" class="current">Infrastructure</li>
                </ul>
                <div id="content-title">
                    <div class="page-header">
                        <h1 class="h1 main-headings">PBR VITS Campus</h1>
                    </div>
                </div>
                <section id="content-block">
                    <div class="col-md-8">
                        <div id="content-block__main">
                            <p class="text-content text-para">
                            
                            The College has a uniquely designed and well maintained campus of over 25acres. The College is housed amidst lush green fields, in serene environment,free from pollution and conducive for the pursuit of education.</p>
                            <p class="text-content text-para">
                            The College is well provided with spacious, well-designed, adequately furnished classrooms having LCD Projectors. All the laboratories of engineeringand sciences are provided with latest equipment. The laboratories andworkshops are fully equipped with the state-of-the-art facilities; Particularly theComputer labs, CAD/CAM Center, Internet centre and Language Lab are valueadded assets to the college</p>                            
                            <p class="text-content text-para">
                            Solar power project adds on to the green power and pollution free campus.
                            </p>
                            <div id="image-rendering">
                                <img class="img-responsive" src="~/images/CampusLife/building.JPG" />
                            </div>
                        </div>
                    </div>
                </section>
                <aside id="right-side-nav-menu">
                    <div class="col-md-4">
                        <div id="content-block__side-menu">
                            @Html.Partial("_AcadamicsQuickLinks")
                        </div>
                    </div>
                </aside>
            </div>
        </article>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/gh/cant89/gianni-accordion-js/dist/gianniAccordion.min.js"></script>
    <script src="~/js/campusLife.js"></script>
    @*https://www.jqueryscript.net/text/Animated-Text-Truncate-Content-Toggle-Plugin-jQuery-Collapser.html*@
    <script src="~/js/jquery.collapser.min.js"></script>
  
}


