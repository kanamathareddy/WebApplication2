
@{
    ViewData["Title"] = "FirstAid";
}


@{
    ViewData["Title"] = "FirstAid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles{
    <link rel="stylesheet" href="~/css/campuslife.css" />
}

<div id="campuslife-content">
    <section id="inner-banner">
        @Html.Partial("_innerBanner")
    </section>
    <div class="row">
        <aside id="left-side-nav-menu" class="col-md-3 col-sm-4 box hidden-xs">
            @Html.Partial("_CampusLifeSideBar")
        </aside>
        <article id="core-content" class="col-md-9 col-sm-8 box ">
            <div class="col-xs-12">
                <ul id="breadcrumb-nav-section" class="breadcrumb">
                    <li class="current"><a class="href-links" asp-controller="CampusLife" asp-action="Index" id="campuslife">CampusLife</a></li>
                    <li id="currentpageBreadcrum" class="current">FirstAid</li>
                </ul>
                <div id="content-title">
                    <div class="page-header">
                        <h1 class="h1 main-headings">FirstAid</h1>
                    </div>
                </div>
                <section id="content-block">
                    <div class="col-md-8">
                        <div id="content-block__main">
                            <p class="text-content text-para">                            
                           PBR Visvodaya Institute of Technology & Science has set up a medical facility with necessary medical facilities in the campus to give first aid in case of any medical emergency. First aid boxes are available in every individual department. A general physician visits the campus regularly for the convenience of students with health issues. The institute also arranges a free medical check up annually for students and staff. Health awareness camps and talks are conducted regularly for the benefit of the students.
                           </p>
                            
                            <ul class="global-custom-unordered-list">  
                                Facilities:                           
                                <li>
                                Consultation and distribution of medicines to students
                                </li>
                                <li>
                                Organization of different camps and talks for benefit and awareness of students
                                </li>
                                <li>
                                Sick Rooms are specially designed and are well equipped with the required medical kits- For emergency primary treatment
                                </li>
                                <li>
                                First aid facility  is available in every department
                                </li>
                                <li>
                                Medical checkup camps are regularly organized for students
                                </li>
                            </ul>
                            
                        </div>
                    </div>
                </section>
                <aside id="right-side-nav-menu">
                    <div class="col-md-4">
                        <div id="content-block__side-menu">
                            @Html.Partial("_AcadamicsQuickLinks")
                        </div>
                    </div>
                </aside>
            </div>
        </article>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/gh/cant89/gianni-accordion-js/dist/gianniAccordion.min.js"></script>
    <script src="~/js/campusLife.js"></script>
    @*https://www.jqueryscript.net/text/Animated-Text-Truncate-Content-Toggle-Plugin-jQuery-Collapser.html*@
    <script src="~/js/jquery.collapser.min.js"></script>
  
}


