
@{
    ViewData["Title"] = "Cafeteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles{
    <link rel="stylesheet" href="~/css/campuslife.css" />
}

<div id="campuslife-content">
    <section id="inner-banner">
        @Html.Partial("_innerBanner")
    </section>
    <div class="row">
        <aside id="left-side-nav-menu" class="col-md-3 col-sm-4 box hidden-xs">
            @Html.Partial("_CampusLifeSideBar")
        </aside>
        <article id="core-content" class="col-md-9 col-sm-8 box ">
            <div class="col-xs-12">
                <ul id="breadcrumb-nav-section" class="breadcrumb">
                    <li class="current"><a class="href-links" asp-controller="CampusLife" asp-action="Index" id="campuslife">CampusLife</a></li>
                    <li id="currentpageBreadcrum" class="current">Cafeteria</li>
                </ul>
                <div id="content-title">
                    <div class="page-header">
                        <h1 class="h1 main-headings">A place to relax</h1>
                    </div>
                </div>
                <section id="content-block">
                    <div class="col-md-8">
                        <div id="content-block__main">
                             <p class="text-content text-para">
                              As a place of informal communication and relaxation, the college cafeteria has been designed aesthetically to provide ample space for relaxed dining.   
                            </p>
                            <div id="image-rendering">
                                <img class="img-responsive" src="~/images/CampusLife/cafetaria.JPG" />
                            </div>
                            <p class="text-content text-para">
                            The cafeteria caters to the requirements of the students as well as the staff throughout the day.  Food is served in a clean and hygienic manner at affordable prices. Various types of snacks, breakfast items, drinks and meals are served in the cafeteria.
                            </p>
                            
                        </div>
                    </div>
                </section>
                <aside id="right-side-nav-menu">
                    <div class="col-md-4">
                        <div id="content-block__side-menu">
                            @Html.Partial("_AcadamicsQuickLinks")
                        </div>
                    </div>
                </aside>
            </div>
        </article>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/gh/cant89/gianni-accordion-js/dist/gianniAccordion.min.js"></script>
    <script src="~/js/admissions.js"></script>
    @*https://www.jqueryscript.net/text/Animated-Text-Truncate-Content-Toggle-Plugin-jQuery-Collapser.html*@
    <script src="~/js/jquery.collapser.min.js"></script>
  
}
